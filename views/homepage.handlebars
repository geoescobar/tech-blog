</header>

<div class="profile-feed">
  <div class="d-flex justify-content-center">
    <div class="card my-card" style="width: 50rem;">
      <div class="card-body">
        {{#each posts}}
          <h5 class="card-subtitle mb-2 my-username">@{{user.username}}</h5>
        {{/each}}
        <h6 class="card-title text-dark my-posts">My Posts</h6>
        <p class="card-text text-dark instructions">You can edit and delete any
          of your posts on this page.</p>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="card card-container text-dark">
      <div class="card-body card-title">
        <h3>Title</h3>
      </div>
      <div class="card-body card-post">
        {{#if editable}}
          <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Quasi,
            aspernatur!</p>
        {{else}}
          <div class="d-flex justify-content-center">
            <div class="card card-container text-dark">
              <div class="card-body card-title">
                <form action="/action_page.php">
                  <label for="title">Post Title:</label><br />
                  <input
                    type="text"
                    id="my-title"
                    name="post-title"
                    placeholder="Enter Text..."
                    size="100"
                  /><br />
                  <label for="body">Post Content:</label><br />
                  <input
                    type="text"
                    id="my-content"
                    name="post-content"
                    placeholder="Enter Text..."
                    size="100"
                  /><br /><br />
                  <div class="d-flex justify-content-center">
                    <button id="my-post-btn" class="post-btn" type="submit">
                      Post
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
      <div class="d-flex justify-content-evenly">
        <button id="delete-btn" class="delete-btn"><i class="bi bi-trash"></i>
        </button>
        <button id="edit-btn" class="edit-btn"><i
            class="bi bi-pencil-square"
          ></i>
        </button>
        <button id="save-btn" class="edit-btn"><i
            class="bi bi-pencil-square"
          ></i>
        </button>
      </div>
    </div>
  </div>

</div>