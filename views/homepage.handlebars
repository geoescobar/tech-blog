<header id="navbar">
  <nav class="navbar navbar-expand-lg bg-none">
    <div class="container-fluid">
      <h3>Tech Blog</h3>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a
            id="#"
            class="text-light nav-link active"
            aria-current="page"
            href="/feed"
          >Feed</a>
